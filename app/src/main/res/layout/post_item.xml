<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:radius="4dp"
        card_view:cardBackgroundColor="@color/table_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/procurement" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Id: 1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_supplier_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mkulima Seed Suppliers"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_supplier_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tomato Seeds"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_supplier_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kshs 500 per kg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_supplier_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="High quality seeds guaranteed to keep our customers satisfied. Available for purchase on credit"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_edit"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="Edit"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginEnd="10dp"
                        tools:ignore="HardcodedText" />

                    <ImageButton
                        android:id="@+id/btn_delete"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_delete"
                        android:contentDescription="Delete"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>